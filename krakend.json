{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "endpoints": [
        {
            "endpoint": "/v1/hello",
            "method": "GET",
            "output_encoding": "no-op",
            "extra_config": {
                "security/cors": {
                    "allow_origins": [
                        "*"
                    ],
                    "expose_headers": [
                        "Content-Length",
                        "Content-Type"
                    ],
                    "allow_headers": [
                        "Origin",
                        "Authorization",
                        "Content-Type"
                    ],
                    "max_age": "12h",
                    "allow_credentials": false,
                    "debug": false
                },
                "auth/validator": {
                        "alg": "HS256",
                        "jwk_url": "http://localhost:8081/symmetric.json",
                        "cache": false,
                        "disable_jwk_security": true,
                        "operation_debug": true
                }
            },
            "backend": [
                {
                    "url_pattern": "/",
                    "encoding": "no-op",
                    "sd": "static",
                    "method": "GET",
                    "host": [
                        "http://localhost:8081"
                    ],
                    "disable_host_sanitize": false
                }
            ]
        }
    ]
}